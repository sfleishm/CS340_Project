{{!-- Insert into Books --}}
<h1>Add Entry to Books</h1>

{{!-- Form for adding a new book to the system --}}
<form id="booksInsert"> 
    <input type="text" id = "title" name="title" placeholder="Book Title">
    <input type="date" id = "publicationDate" name="publicationDate" value="YYYY-MM-DD">
    Select Author : <select name="Author" id="AuthorDropDown_Books">
        
        {{#each authors}}
        <option value="{{this.authorID}}">{{this.authorName}}</option>
        {{/each}}
    </select>
    
    Select Library : <select name="Library" id="LibraryDropDown_Books">
        
        <option value=""></option>
        {{#each libs}}
        <option value="{{this.libraryID}}">{{this.name}}</option>
        {{/each}}
    </select>

    Select genre : <select name="genre" id="genreDropDown_Books1">
        
        <option value=""></option>
        {{#each genres}}
        <option value="{{this.genreID}}">{{this.genreName}}</option>
        {{/each}}
    </select>

    Select genre : <select name="genre" id="genreDropDown_Books2">
        
        <option value=""></option>
        {{#each genres}}
        <option value="{{this.genreID}}">{{this.genreName}}</option>
        {{/each}}
    </select>

    Select genre : <select name="genre" id="genreDropDown_Books3">
        
        <option value=""></option>
        {{#each genres}}
        <option value="{{this.genreID}}">{{this.genreName}}</option>
        {{/each}}
    </select>
    
    <input id="BookSubmit" type="submit" value="Submit">
</form>


{{!-- Insert Into Libraries --}}
<h1>Add Entry to Libraries</h1>

