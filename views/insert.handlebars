{{!-- Insert Into Patrons --}}
<h1>Add Entry to Patrons</h1>

{{!-- Form for adding a new patron to the database --}}
<form id="patronsInsert"> 
    <input type="text" id = "firstName" name="firstName" placeholder="First Name">
    <input type="text" id = "lastName" name="lastName" placeholder="Last Name">

    <input type="text" id = "patronState" name="patronState" placeholder="Patron State">
    <input type="text" id = "patronCity" name="patronCity" placeholder="Patron City">
    <input type="text" id = "patronStreet" name="patronStreet" placeholder="Patron Street">
    <input type="text" id = "patronZip" name="patronZip" placeholder="Patron Zip">

    Select Library : <select name="Library" id="LibraryDropDown_Patron">
        
        {{#each libs}}
        <option  id = "patronLibraryID" value="{{this.libraryID}}">{{this.name}}</option>
        {{/each}}
    </select>

    <input id="PatronSubmit" type="submit" value="Submit">
</form>

