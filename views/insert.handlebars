{{!-- Insert into Books --}}
<h1>Add Entry to Books</h1>

{{!-- Form for adding a new book to the system --}}
<form id="booksInsert"> 
    <input type="text" id = "title" name="title" placeholder="Book Title">
    <input type="date" id = "publicationDate" name="publicationDate" value="YYYY-MM-DD">
    <input type="number" id = "authorID" name="authorID" placeholder="Which Author is this Book Associated With">
    <input type="number" id = "libraryID" name="libraryID" placeholder="Which Library is this Book Associated With">
    <input type="text" id = "genre1" name="genre1" placeholder="1st Genre">
    <input type="text" id = "genre2" name="genre2" placeholder="2nd Genre">
    <input type="text" id = "genre3" name="genre3" placeholder="3rd Genre">
    
    <input id="BookSubmit" type="submit" value="Submit">
</form>

{{!-- Insert Into Libraries --}}
<h1>Add Entry to Libraries</h1>

{{!-- Form for adding a new library to the database --}}
<form id="librariesInsert"> 
    <input type="text" id = "libraryName" name="libraryName" placeholder="Library Name">
    <input type="text" id = "libraryState" name="libraryState" placeholder="Library State">
    <input type="text" id = "libraryCity" name="libraryCity" placeholder="Library City">
    <input type="text" id = "libraryStreet" name="libraryStreet" placeholder="Library Street">
    <input type="text" id = "libraryZip" name="libraryZip" placeholder="Library Zip">

    <input id="LibrarySubmit" type="submit" value="Submit">
</form>

{{!-- Insert Into Patrons --}}
<h1>Add Entry to Patrons</h1>

{{!-- Form for adding a new patron to the database --}}
<form id="patronsInsert"> 
    <input type="text" id = "firstName" name="firstName" placeholder="First Name">
    <input type="text" id = "lastName" name="lastName" placeholder="Last Name">

    <input type="text" id = "patronState" name="patronState" placeholder="Patron State">
    <input type="text" id = "patronCity" name="patronCity" placeholder="Patron City">
    <input type="text" id = "patronStreet" name="patronStreet" placeholder="Patron Street">
    <input type="text" id = "patronZip" name="patronZip" placeholder="Patron Zip">

    <input type="number" id = "patronLibraryID" name="patronLibraryID" placeholder="Which Library is this Patron Associated With">

    <input id="PatronSubmit" type="submit" value="Submit">
</form>

{{!-- Insert into Genres --}}
<h1>Add Entry to Genres</h1>


<form id="genresInsert"> 
    <input type="text" id = "genreName" name="genreName" placeholder="Genre Name">
    <input type="text" id = "genreDescription" name="genreDescription" placeholder="Description of the Genre">
    <input id="GenreSubmit" type="submit" value="Submit">
</form>

{{!-- Insert into Authors --}}
<h1>Add Entry to Authors</h1>


<form id="authorsInsert"> 
    <input type="text" id = "authorName" name="authorName" placeholder="First Name & Last Name">
    <input id="AuthorSubmit" type="submit" value="Submit">
</form>

