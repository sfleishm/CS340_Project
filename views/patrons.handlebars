<!-- Hello Part -->
<div class="container">
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <p class="lead">Find all Patrons in the Database.</p>
    </div>

    <!-- Search Bar -->
    <div class="input-group ">
        <input type="search" class="form-control rounded" onkeyup="myFunction()" id='bookFilter' placeholder="Search by First Name" aria-label="Search"
            aria-describedby="search-addon" />
        <button type="button" class="btn btn-outline-primary">search</button>
    </div>

    <!-- Table for Patrons -->
    <div class="container" id='tableID'>
        <table class="table justify-content-center">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Patron ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">State</th>
                <th scope="col">City</th>
                <th scope="col">Street</th>
                <th scope="col">Zip</th>
                <th scope="col">Library</th>
                <th scope="col">Update Row</th>
                <th scope="col">Delete Row</th>

            </tr>
            </thead>
            <tbody id = 'tbody'>
            {{#each results}}
            <tr>
                <td><input type="number" value='{{this.patronID}}' class='id' disabled></td>
                <td><input type="text" value='{{this.firstName}}' class='name' disabled></td>
                <td><input type="text" value='{{this.lastName}}' class='name' disabled></td>
                <td><input type="text" value='{{this.state}}' class='state' disabled></td>
                <td><input type="text" value='{{this.city}}' class='state' disabled></td>
                <td><input type="text" value='{{this.street}}' class='street' disabled></td>
                <td><input type="text" value='{{this.zip}}' class='zip' disabled></td>
                <td><select class='' disabled>
                    <option value='{{this.libraryID}}' selected>{{this.name}}</option>
                      {{#each ../libs}}
                        <option value='{{this.libraryID}}'>{{this.name}}</option>
                      {{/each}}
                  </select>
                </td>
                <td><button type="button" class="btn btn-primary btn-edit">Update</button></td>
                <td><button type="button" class="btn btn-danger btn-delete">Delete</button></td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

