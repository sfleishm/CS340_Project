<!-- Hello Part -->
<div class="container">
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">Welcome!</h1>
        <p class="lead">Find the book you're looking for! (Try to search for a book, it should work)</p>
    </div>
    
    <div class="btn-group" role="group" aria-label="Basic example">
          <input style='margin: 10px 5px 10px 20px' type="radio" id='bookButtonFilter' name="search" class="btn btn-secondary">Book Title</input>
          <input style='margin: 10px 5px 10px 20px' type="radio" id='bookAuthorFilter' name="search" class="btn btn-secondary">Author</input>
          <input style='margin: 10px 5px 10px 20px' type="radio" id='bookDateFilter' name="search" class="btn btn-secondary">Publication Date</input>
          <input style='margin: 10px 5px 10px 20px ' type="radio" id='bookGenreFilter' name="search" class="btn btn-secondary">Genre</input>
    </div>
    <!-- Search Bar -->
    <div class="input-group ">
        <input type="search" class="form-control rounded" onkeyup="myFunction()" id='bookFilter' placeholder="Search" aria-label="Search"
            aria-describedby="search-addon" />
        <button type="button" class="btn btn-outline-primary">search</button>
    </div>

    {{!-- Trying to mimic example here  --}}
    <!-- Table for Books -->
    <div class="container" id='tableID'>
        <table class="table justify-content-center">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Book ID</th>
                <th scope="col">Book Title</th>
                <th scope="col">Genres</th>
                <th scope="col">Author</th>
                <th scope="col">Publication Date</th>
                <th scope="col">Library</th>
            </tr>
            </thead>
            <tbody id = 'tbody'>
            {{#each results}}
            <tr>
              <td>{{this.bookID}}</td> 
              <td>{{this.title}}</td>
	            <td>{{this.Genres}}</td>
              <td>{{this.authorName}}</td>
              <td>{{this.publicationDate}}</td>
              <td>{{this.name}}</td>

            </tr>
            {{/each}} 
            </tbody>
        </table>
    </div>

